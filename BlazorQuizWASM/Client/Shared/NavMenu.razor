<MudNavMenu>
    <MudNavLink Href="/" Match="NavLinkMatch.All">
        <MudIcon Icon="@Icons.Material.Filled.Home" /> Home
    </MudNavLink>

    <AuthorizeView>
        <Authorized>
            <MudNavLink Href="/playquiz" Match="NavLinkMatch.Prefix">
                <MudIcon Icon="@Icons.Material.Filled.List" /> Play Quiz
            </MudNavLink>

            <MudNavLink Href="/answeredquizzes" Match="NavLinkMatch.Prefix">
                <MudIcon Icon="@Icons.Material.Filled.List" /> QuizBoard
            </MudNavLink>

            <MudNavGroup Title="Quiz Manager" Expanded="true">
                <MudNavLink Href="/createquiz" Match="NavLinkMatch.Prefix">
                    <MudIcon Icon="@Icons.Material.Filled.Create" /> Create Quiz
                </MudNavLink>

                <MudNavLink Href="/myquizzes" Match="NavLinkMatch.Prefix">
                    <MudIcon Icon="@Icons.Material.Filled.Quiz" /> My Quizzes
                </MudNavLink>

            </MudNavGroup>
        </Authorized>
    </AuthorizeView>

    <MudNavLink Href="/test" Match="NavLinkMatch.Prefix">
        <MudIcon Icon="@Icons.Material.Filled.Code" /> Swagger
    </MudNavLink>

</MudNavMenu>